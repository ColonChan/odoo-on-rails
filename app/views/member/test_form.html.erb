<h1>Member Test Form</h1>

<form action="/api/member/create" method="POST">
  <input type="text" name="email" placeholder="email" value="test@test1.com"/>
  <input type="text" name="password" placeholder="password" value="123123" />
  <select name="company_id">
    <% @companies.each do |company| %>
      <option value="<%= company.id %>"><%= company.name %></option>
    <% end %>
  </select>
  <button type="submit">Create</button>
</form>

<form action="/api/member/add_company" method="POST">
  <input type="text" name="member_id" placeholder="member_id" value=""/>
  <select name="company_id">
    <% @companies.each do |company| %>
      <option value="<%= company.id %>"><%= company.name %></option>
    <% end %>
  </select>
  <button type="submit">Add</button>
</form>

<form action="/api/member/invite_company" method="POST">
  <input type="text" name="member_id" placeholder="member_id" value=""/>
  <select name="company_id">
    <% @companies.each do |company| %>
      <option value="<%= company.id %>"><%= company.name %></option>
    <% end %>
  </select>
  <button type="submit">Send invitation</button>
</form>
